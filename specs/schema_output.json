{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MPP Result Schema v1.0",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "git_commit_hash": { "type": "string" },

    "config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "instance_path": { "type": "string" },
        "algorithm": { "type": "string" },
        "budget_evals": { "type": ["integer", "null"], "minimum": 1 },
        "seed": { "type": "integer" },
        "delta_v": { "type": "number" },
        "v_max": { "type": "number" },
        "timestamp_utc": { "type": "string" }
      },
      "required": ["instance_path", "algorithm", "seed", "delta_v", "v_max"]
    },

    "instance_metrics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "nodes": { "type": "integer", "minimum": 1 },
        "edges": { "type": "integer", "minimum": 0 },
        "density": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "modularity": { "type": ["number", "null"] },
        "cv_vel": { "type": "number", "minimum": 0.0, "maximum": 1.0 }
      },
      "required": ["nodes", "edges", "density", "cv_vel"]
    },

    "resultados": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "frente_pareto_final": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "neg_fo1": { "type": "number" },
              "num_clusters_norm": { "type": "number", "minimum": 0.0 },
              "desvio_vel": { "type": "number", "minimum": 0.0 }
            },
            "required": ["neg_fo1", "num_clusters_norm", "desvio_vel"]
          }
        },
        "hypervolume": { "type": "number", "minimum": 0.0 },
        "runtime_ms": { "type": "integer", "minimum": 0 },
        "evaluations_total": { "type": "integer", "minimum": 0 },
        "overflow": { "type": "boolean" },
        "history_log": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "t_ms": { "type": "integer", "minimum": 0 },
              "evals": { "type": "integer", "minimum": 0 },
              "neg_fo1": { "type": "number" },
              "num_clusters_norm": { "type": "number", "minimum": 0.0 },
              "desvio_vel": { "type": "number", "minimum": 0.0 }
            },
            "required": ["t_ms", "evals", "neg_fo1", "num_clusters_norm", "desvio_vel"]
          }
        }
      },
      "required": ["frente_pareto_final", "hypervolume", "runtime_ms", "evaluations_total", "overflow"]
    }
  },
  "required": ["schema_version", "git_commit_hash", "config", "instance_metrics", "resultados"]
}
